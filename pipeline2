pipeline {
    agent any
    environment {
        REGION_GCP = "us-central1"
        ZONE_GCP = "us-central1-a"
        PROJECT_ID = "mythic-inn-420620"
    }

    stages {
        stage("Git Clone") {
            steps {
                git branch: 'main', url: 'https://github.com/ganesh-redy/docker-pipe-cloud-run.git'
            }
        }

        stage("Validate Terraform") {
            steps {
                sh 'terraform validate'
            }
        }

        stage("Destroy Terraform Infra") {
            steps {
                sh '''
                terraform init
                terraform destroy --auto-approve
                '''
            }
        }
    }

    post {
        success {
            echo "Previous instances destroyed successfully! ğŸš€"
        }
        failure {
            echo "Terraform destroy failed! âŒ"
        }
    }
}

